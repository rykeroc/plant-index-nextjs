{
	"title": "plant-index",
	"version": "0.1.0",
	"lint": {
		"include": ["src/"],
		"exclude": ["tests/"],
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"],
			"exclude": ["no-unused-vars"]
		}
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": ["src/"],
		"exclude": ["tests/"]
	},
	"exclude": [".next"]
}
